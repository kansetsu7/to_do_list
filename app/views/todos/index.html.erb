<div class="container" id="todo_list">
  <!-- title -->
  <%= render :partial => "title" %>
  <!-- contents -->
  <%= render :partial => "mission" %>
  
    
  </div>
</div>

<!-- navbar for adding new mission -->
<nav class="navbar-fixed-bottom navbar-default">
  <div class="form container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <%= render :partial => "show_errors" %>
        <%= form_for @todo, html:{class: "new_todo form-inline"} do |f| %>
          <button type="submit" class="add-todo">
            <span class="sr-only">Add todo</span>
            <span class="glyphicon glyphicon-plus"></span>
          </button>

          <div class="form-group">
            <%= f.label :name, "Mission:" %>
            <%= f.text_field :name,  class: "form-control", placeholder: "yoo" %> 
          </div>

          <div class="form-group">
            <%= f.label :date, "Due date:" %>
            <%= f.text_field :due_date,  class: "form-control", placeholder: "2017-01-01" %> 
          </div>

          <div class="form-group">
            <%= f.label :note, "Note:" %>
            <%= f.text_area :note,  class: "form-control", placeholder: "details..." %> 
          </div>

        <% end %>
      </div>
    </div>
  </div>
</nav>