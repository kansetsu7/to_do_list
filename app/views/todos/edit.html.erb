<h1 class="text-center">Edit Mission</h1>

<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
  <%= form_for @todo do |f| %>
    <%= render :partial => "show_errors" %>
    <div class="form-group">
      <%= f.label :name, "Mission:" %>
      <%= f.text_field :name,  class: "form-control", placeholder: "yoo" %> 
    </div>

    <div class="form-group">
      <%= f.label :date, "Due date:" %>
      <%= f.text_field :due_date,  class: "form-control", placeholder: "2017-01-01" %> 
    </div>

    <div class="form-group">
      <%= f.label :note, "Note:" %>
      <%= f.text_area :note,  class: "form-control", placeholder: "details..." %> 
    </div>
    <div class="row">
      <div class="col-xs-3 col-xs-offset-3 col-sm-1 col-sm-offset-4">
        <button type="submit" class="btn btn-default">
          <span class="glyphicon glyphicon-floppy-disk"></span>Save
        </button>
      </div>
      <div class="col-xs-3 col-xs-offset-3 col-sm-1 col-sm-offset-2">
        <%= link_to todos_path do %>
        <div  class="btn btn-default" id="gly-btn">
          <span class="glyphicon glyphicon-share-alt" id="exit-edit"></span>Exit
        </div>
        <% end %>
      </div>
    </div>


  <% end %>
  </div>
</div>